SELECT *
FROM CREATE_REMOTE_TABLE()
WHERE remote_table_name = 'customer_loyalty_program'
    AND replace_base_view_if_exist = true
    AND replace_remote_table_if_exist = true
    AND datasource_database_name = 'venture1'
    AND datasource_name = 'venture1_ds'
    AND datasource_catalog = 'venture1'
    AND datasource_schema = 'Generic'
    AND base_view_database_name = 'venture1'
    AND base_view_name = 'customer_loyalty_program'
    AND base_view_folder = '/base views'
    AND query = 'SELECT txn_id, txn_dt, audit_dt, audit_reason from txn_audit;'
;
